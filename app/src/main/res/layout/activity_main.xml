<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Exp"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:textColor="@color/white"
        android:gravity="end"
        android:textSize="30sp"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/Res"
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:textColor="@color/white"
        android:gravity="end"
        android:textSize="35sp"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/BuClear"
                style="@style/ActionButtonStyle"
                android:background="@drawable/circle3"
                android:text="C"/>
            <TextView
                android:id="@+id/BuOpenclose"
                android:text="( )"
                style="@style/ActionButtonStyle"/>
            <TextView
                android:id="@+id/BuPercent"
                style="@style/ActionButtonStyle"
                android:text="%"/>
            <TextView
                android:id="@+id/BuDiv"
                style="@style/ActionButtonStyle"
                android:text="รท"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/BuSeven"
                style="@style/NumberButtonStyle"
                android:text="7"/>
            <TextView
                android:id="@+id/BuEight"
                style="@style/NumberButtonStyle"
                android:text="8"/>
            <TextView
                android:id="@+id/BuNine"
                style="@style/NumberButtonStyle"
                android:text="9"/>
            <TextView
                android:id="@+id/BuMulti"
                style="@style/ActionButtonStyle"
                android:text="ร"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/BuFour"
                style="@style/NumberButtonStyle"
                android:text="4"/>
            <TextView
                android:id="@+id/BuFive"
                style="@style/NumberButtonStyle"
                android:text="5"/>
            <TextView
                android:id="@+id/BuSix"
                style="@style/NumberButtonStyle"
                android:text="6"/>
            <TextView
                android:id="@+id/BuSub"
                style="@style/ActionButtonStyle"
                android:text="-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/BuOne"
                style="@style/NumberButtonStyle"
                android:text="1"/>
            <TextView
                android:id="@+id/BuTwo"
                style="@style/NumberButtonStyle"
                android:text="2"/>
            <TextView
                android:id="@+id/BuThree"
                style="@style/NumberButtonStyle"
                android:text="3"/>
            <TextView
                android:id="@+id/BuAdd"
                style="@style/ActionButtonStyle"
                android:text="+"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/BuDot"
                style="@style/NumberButtonStyle"
                android:text="."/>
            <TextView
                android:id="@+id/BuZero"
                style="@style/NumberButtonStyle"
                android:text="0"/>
            <ImageView
                android:id="@+id/BuBack"
                android:src="@drawable/backspace"
                android:scaleType="center"
                android:background="@drawable/circle1"
                style="@style/ActionButtonStyle"/>
            <TextView
                android:id="@+id/BuEqual"
                style="@style/ActionButtonStyle"
                android:text="="
                android:background="@drawable/circle2"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
